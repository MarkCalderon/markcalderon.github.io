{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean:post-pug": "rimraf ./_inc",
    "copy:img": "cpx \"src/img/**/*\" ./_assets/img/",
    "copy:lib": "cpx \"src/lib/**/*\" ./_assets/lib/",
    "copy:docs": "cpx \"src/docs/**/*\" ./_assets/docs/",
    "watch:img": "chokidar \"src/img/**/*\" -c \"npm run copy:img\"",
    "watch:lib": "chokidar \"src/lib/**/*\" -c \"npm run copy:lib\"",
    "build:scss": "sass --style=compressed --color \"src/scss/main.scss\" \"./_assets/css/main.css\" ",
    "build:pug": "pug --pretty \"src/pug\" --out \"./\" ",
    "build:js": "webpack --config config/webpack.config.js",
    "start:server": "browser-sync --no-snippet start --server \"./\" --files \"./\"",
    "watch:js": "chokidar \"src/js/**/*.js\" -c \"npm run build:js\"",
    "watch:pug": "chokidar \"src/pug/**/*\" -c \"run-s build:pug clean:post-pug\"",
    "watch:scss": "chokidar \"src/scss/**/*.scss\" -c \"npm run build:scss\"",
    "watch:static": "run-p watch:img watch:lib watch:pug watch:js watch:scss",
    "serve": "run-p start:server watch:static"
  },
  "browserslist": [
    "<2%",
    "ie 11",
    "not dead"
  ],
  "author": "Mark Calderon",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.15.0",
    "@babel/preset-env": "^7.15.0",
    "babel-loader": "^8.2.2",
    "browser-sync": "^2.27.5",
    "chokidar-cli": "^2.1.0",
    "cpx": "^1.5.0",
    "npm-run-all": "^4.1.5",
    "pug-cli": "^1.0.0-alpha6",
    "rimraf": "^3.0.2",
    "sass": "^1.35.2",
    "webpack": "^5.49.0",
    "webpack-cli": "^4.7.2"
  },
  "dependencies": {
    "aos": "^2.3.4",
    "simple-parallax-js": "^5.6.2"
  }
}
